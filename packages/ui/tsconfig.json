{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "es2015",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "baseUrl": "./",
        "sourceMap": true,
        "target": "ES2020",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "types": ["node", "mocha"],
        "skipLibCheck": true,
        "preserveSymlinks": true,
        "pretty": true
    },
    "include": ["./src/**/*"]
}
